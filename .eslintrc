{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
   },
   "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true
   },
   "rules": {
     "max-len": [1, 180, 4],
     "arrow-body-style": [0],
     "react/no-is-mounted": 0,
     "no-param-reassign": 0,
     "global-require": 0,
     "no-script-url": 0,
     "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
     "comma-dangle": ["error", "only-multiline"]
   }
}
